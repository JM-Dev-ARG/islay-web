---
type Props = {
  title: string;
  short_description: string;
  long_description: string;

  urlContactoWhatsapp?: string;
  cardBackground?: string;
};

const {
  title,
  short_description,
  long_description,
  cardBackground,
  urlContactoWhatsapp,
} = Astro.props;
---

<div
  class="card__service group h-[550px] lg:h-[550px] xl:h-[550px] 2xl:h-[620px] shadow-md"
>
  <img
    src={cardBackground}
    alt=`Imagen de ${title}`
    class="relative w-full h-[115%] object-cover object-center -z-10"
  />
  <div class="title__not__hover text-[50px] lg:text-[70px]">
    <p>
      {title}
    </p>
  </div>

  <div class="content__container">
    <div class="card__init__container opacity-100 z-10">
      <div class="title__init__container">
        <p>
          {title}
        </p>
        <p class="card__description__not__hover leading-normal text-base">
          {short_description}
        </p>
      </div>
    </div>

    <div class="card__on__hover__container z-10">
      <div class="title__on__hover__container">
        <div class=`title__on__hover  font-black text-[50px] 2xl:text-[70px]`>
          <p
            style={`${title === "Automotores" ? "--margin:0px" : "--margin:24px"}`}
          >
            {title}
          </p>

          <a
            href={urlContactoWhatsapp}
            target="_blank"
            class="card__button cursor-pointer text-[#3A3E32] bg-[#D4DCC0] hover:bg-[#3A3E32] hover:text-[#D4DCC0] transition-all duration-700 ease-linear"
          >
            <button class="text-sm lg:text-xl 2xl:text-2xl">
              Conocer m√°s
            </button>
          </a>
        </div>
      </div>
      <div class="description__on__hover__container">
        <p>
          {long_description}
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  .card__service {
    width: 100%;
    overflow: hidden;
    position: relative;
    flex: 1;
    border-radius: 2px;
    transition: 1s ease 0.8s;
  }
  .card__service::before {
    content: "";
    position: absolute;
    flex: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #262727;
    opacity: 0.7;
    transition: 1s ease 1s;
  }
  .card__service:hover {
    flex: 60%;
  }
  .card__service:hover::before {
    opacity: 0.2;
  }
  @media (max-width: 900px) {
    .card__service:hover {
      flex: 75%;
    }
  }

  .title__not__hover {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    padding-inline: 2.5rem;
    justify-content: start;
    align-items: center;
    flex-direction: row;
    width: 100%;
    height: 100%;
    opacity: 0;
    writing-mode: vertical-lr;
    transform: rotate(180deg);
    text-align: center;
    color: #e7e7e7;
    transition: 0.8s ease 0.3s;
  }

  .content__container {
    position: absolute;
    padding: 1.25rem;
    top: 0;
    right: 0;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: start;
    align-items: end;
    opacity: 1;
    transition: opacity 0.5s ease 0.8s;
  }

  .card__init__container {
    opacity: 1;
    display: flex;
  }

  .title__init__container {
    font-size: clamp(24px, 3vw, 60px);
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    color: #e7e7e7;
  }

  .card__service:hover .card__init__container {
    animation: cardContentAnimationHover 1.6s ease 0.3s both;
  }

  .card__service:not(:hover) .card__init__container {
    animation: cardContentAnimationNotHover 0.8s ease 1s backwards;
  }

  @keyframes cardContentAnimationHover {
    0% {
      opacity: 1;
      display: flex;
    }
    50% {
      opacity: 0;
      display: none;
    }

    100% {
      opacity: 0;
      display: none;
    }
  }

  @keyframes cardContentAnimationNotHover {
    0% {
      opacity: 0;
      display: none;
    }

    50% {
      opacity: 0;
      display: none;
    }

    100% {
      opacity: 1;
      display: flex;
    }
  }

  .card__on__hover__container {
    position: absolute;
    padding: 1.25rem;
    top: 0;
    right: 0;
    opacity: 1;
    height: 100%;
    width: 100%;
    visibility: hidden;
    display: grid;
    grid-template-columns: minmax(266px, auto) 1fr;
    place-content: center;
    gap: 3rem;

    & .title__on__hover__container {
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 5rem;
      color: #e7e7e7;

      & p {
        text-shadow: #1d1d1b 6px 3px 10px;
      }

      & .card__button {
        margin-inline: auto;
        width: fit-content;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: nowrap;
        border-radius: 40px;
        padding-inline: 2rem;
        padding-block: 1rem;
        font-weight: 600;
      }
    }
  }

  .description__on__hover__container {
    height: 100%;
    /* width: 97%; */
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    text-wrap: pretty;
    font-weight: 500;
    font-size: clamp(16px, 1vw, 18px);
    background: rgba(77, 77, 77, 0.623);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 2px;
  }

  .card__service:hover .card__on__hover__container {
    animation: cardOnHoverContentAnimation 1.6s ease 1s both;
  }

  .card__service:not(:hover) .card__on__hover__container {
    animation: cardOnHoverContentAnimationNotHover 0.8s ease 0.5s both;
  }

  @keyframes cardOnHoverContentAnimation {
    0% {
      opacity: 0;
      visibility: hidden;
    }
    50% {
      opacity: 0;
      visibility: visible;
    }

    100% {
      opacity: 1;
      visibility: visible;
    }
  }

  @keyframes cardOnHoverContentAnimationNotHover {
    0% {
      opacity: 1;
      visibility: visible;
    }

    50% {
      opacity: 0;
      visibility: visible;
    }

    100% {
      opacity: 0;
      visibility: hidden;
    }
  }
</style>
