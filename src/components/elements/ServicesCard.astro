---
type Props = {
  title: string;
  short_description: string;
  long_description: string;

  urlContactoWhatsapp?: string;
  cardBackground?: string;
};

const {
  title,
  short_description,
  long_description,
  cardBackground,
  urlContactoWhatsapp,
} = Astro.props;
---

<div
  class="card__service group h-[550px] lg:h-[550px] xl:h-[550px] 2xl:h-[620px] shadow-md bg-center lg:bg-top bg-fill bg-no-repeat"
  style={`--card-background: url(${cardBackground})`}
>
  <div class="title__not__hover text-[50px] lg:text-[70px]">
    <p>
      {title}
    </p>
  </div>
  <div class="card__content flex-col p-5">
    <div
      class=`title z-10 group-hover:font-black group-hover:text-[50px] 2xl:group-hover:text-[70px] transition-all  delay-1000 `
    >
      <p
        style={`${title === "Automotores" ? "--margin:0px" : "--margin:24px"}`}
      >
        {title}
      </p>

      <div class="button__container">
        <a
          href={urlContactoWhatsapp}
          target="_blank"
          class="card__button cursor-pointer z-10 text-[#3A3E32] bg-[#D4DCC0] hover:bg-[#3A3E32] hover:text-[#D4DCC0] transition-all duration-700 ease-linear"
        >
          <button class="text-sm lg:text-xl 2xl:text-2xl"> Conocer m√°s </button>
        </a>
      </div>
    </div>
    <div class="description">
      <p class="card__description__not__hover leading-normal text-base">
        {short_description}
      </p>
      <p class="card__description__hover w-[70%] text-lg">
        {long_description}
      </p>
    </div>
  </div>
</div>

<style>
  .card__service {
    width: 100%;
    overflow: hidden;
    position: relative;
    flex: 1;
    border-radius: 2px;
    transition: 1s ease 0.8s;
    background-image: var(--card-background);
  }
  .card__service::before {
    content: "";
    position: absolute;
    flex: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #262727;
    opacity: 0.7;
    transition: 1s ease 1s;
  }

  .card__service:hover {
    flex: 60%;
  }

  .card__service:hover::before {
    opacity: 0.2;
  }

  @media (max-width: 900px) {
    .card__service:hover {
      flex: 75%;
    }
  }
  .card__content {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: end;
    align-items: center;
    transition:
      opacity 0.8s ease 0.8s,
      flex-direction 0.8s ease 0.8s allow-discrete,
      gap 0.8s ease 0.8s allow-discrete;
  }

  .card__service:hover .card__content {
    /*  gap: 2rem;
    flex-direction: row; */

    animation: cardContentAnimationHover 1.6s ease 0.5s forwards;
  }

  @keyframes cardContentAnimationHover {
    25% {
      opacity: 0;
    }
    50% {
      gap: 2rem;
      flex-direction: row;
    }
    100% {
      opacity: 1;
      gap: 2rem;
      flex-direction: row;
    }
  }

  @keyframes cardContentAnimationNotHover {
    25% {
      opacity: 0;
    }
    50% {
      gap: 2rem;
      flex-direction: row;
    }
    100% {
      opacity: 1;
      gap: 2rem;
      flex-direction: row;
    }
  }

  .title {
    opacity: 1;
    font-size: clamp(24px, 3vw, 60px);
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    color: #e7e7e7;

    & p {
      margin: 0;
    }
  }
  .card__service:hover .card__content .title {
    animation: animationTitleHover 1.6s ease 0.5s forwards;
  }

  .card__service:not(:hover) .card__content .title {
    animation: animationTitleNotHover 0.6s ease 1s both;
  }

  @keyframes animationTitleHover {
    0% {
      opacity: 1;
      gap: 1rem;
      justify-content: start;
      align-items: start;
    }

    50% {
      /*  scale: 0; */
      opacity: 0;
      width: auto;
      gap: 1rem;
      justify-content: start;
      align-items: start;
    }

    100% {
      scale: 1;
      width: auto;
      text-shadow: #1d1d1b 6px 3px 10px;
      gap: 3rem;
      opacity: 1;
      justify-content: center;
      align-items: center;
    }
  }

  @keyframes animationTitleNotHover {
    0% {
      width: auto;
      text-shadow: #1d1d1b 6px 3px 10px;
      gap: 3rem;
      opacity: 1;
      justify-content: center;
      align-items: center;
      scale: 0;
    }

    50% {
      opacity: 0;
    }

    100% {
      opacity: 1;
    }
  }

  .card__service:hover .card__content .title p {
    animation: animationPHover 0.8s ease 0.5s forwards;
  }

  .card__service:not(:hover) .card__content .title p {
    animation: animationPNotHover 0.6s ease 1s both;
  }

  @keyframes animationPHover {
    0% {
      opacity: 1;
      margin-inline: 0;
    }

    90% {
      opacity: 0;
      margin-inline: 0;
    }

    100% {
      opacity: 1;
      margin-inline: var(--margin);
    }
  }

  @keyframes animationPNotHover {
    0% {
      margin-inline: var(--margin);
    }

    100% {
      margin-inline: 0;
    }
  }

  .title__not__hover {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    padding-inline: 2.5rem;
    justify-content: start;
    align-items: center;
    flex-direction: row;
    width: 100%;
    height: 100%;
    opacity: 0;
    writing-mode: vertical-lr;
    transform: rotate(180deg);
    text-align: center;
    /* font-size: 70px; */
    color: #e7e7e7;
    transition: 0.8s ease 0.8s;
  }

  .card__service:has(.card__service:hover)
    .card__service:hover
    .title__not__hover {
    opacity: 1;
  }

  .button__container {
    width: 100%;
    height: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .card__button {
    scale: 0;
    opacity: 0;
    height: 0;
    display: flex;

    justify-content: center;
    align-items: center;
    border-radius: 40px;
    padding-inline: 2rem;
    padding-block: 1rem;
    font-weight: 600;
    transition: 0.3s ease;
  }

  .card__service:hover .card__button {
    animation: animationButtonHover 0.8s ease 1.1s forwards;
  }

  .card__service:not(:hover) .card__button {
    animation: animationButtonNotHover 0.3s ease both;
  }

  @keyframes animationButtonNotHover {
    0% {
      scale: 0;
      opacity: 0;
      height: 0;
    }
    10% {
      scale: 1;
      opacity: 1;
      height: fit-content;
    }
    100% {
      scale: 0;
      opacity: 0;
      height: 0;
    }
  }

  @keyframes animationButtonHover {
    100% {
      scale: 1;
      opacity: 1;
      height: fit-content;
    }
  }

  .description {
    /* position: relative; */
    width: 100%;
    scale: 1;
    opacity: 1;
    height: fit-content;
    display: flex;
    flex-direction: column;
    transition: 0.3s ease;

    & .card__description__not__hover {
      scale: 1;
      opacity: 1;
      height: fit-content;
      text-wrap: pretty;
      font-weight: 600;
      transition:
        0.3s,
        display 0.3s allow-discrete;
    }

    & .card__description__hover {
      padding: 1rem;
      position: relative;
      opacity: 0;
      height: 0;
      width: 90%;
      text-wrap: pretty;
      font-weight: 500;
      background: rgba(77, 77, 77, 0.623);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border-radius: 2px;
      z-index: 2;
      transition:
        0.3s,
        display 0.3s allow-discrete;

      &::after {
        content: "";
        opacity: 0;
        position: absolute;
        height: 140px;
        width: 40px;
        aspect-ratio: 1;
        top: -40px;
        right: -40px;
        background: rgba(119, 119, 119, 0.541);
        backdrop-filter: blur(30px);
        -webkit-backdrop-filter: blur(30px);
        border-radius: 0 5px 5px 0;
        z-index: -1;
      }
      &::before {
        content: "";
        opacity: 0;
        position: absolute;
        height: 40px;
        width: 100px;
        aspect-ratio: 1;
        top: -40px;
        right: 0px;
        background: rgba(119, 119, 119, 0.541);
        backdrop-filter: blur(30px);
        -webkit-backdrop-filter: blur(30px);
        border-top-left-radius: 5px;

        z-index: -1;
      }
    }
  }

  .card__service:hover .description .card__description__hover::after {
    animation: animationDescriptionAfterHover 0.6s ease 1.8s forwards;
  }

  .card__service:not(:hover) .description .card__description__hover::after {
    animation: animationDescriptionAfterNotHover 0.3s ease both;
  }

  .card__service:hover .description .card__description__hover::before {
    animation: animationDescriptionAfterHover 0.6s ease 1.8s forwards;
  }

  .card__service:not(:hover) .description .card__description__hover::before {
    animation: animationDescriptionAfterNotHover 0.3s ease both;
  }

  @keyframes animationDescriptionAfterNotHover {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  @keyframes animationDescriptionAfterHover {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .card__service:hover .card__description__not__hover {
    animation: animationDescriptionHover 0.8s ease 0.5s forwards;
  }

  .card__service:not(:hover) .card__description__not__hover {
    animation: animationDescriptionNotHover 0.3s ease 1s both;
  }

  @keyframes animationDescriptionNotHover {
    0% {
      scale: 0;
      opacity: 0;
      height: 0;
    }
    10% {
      height: 100%;
    }
    100% {
      scale: 1;
      opacity: 1;
      height: 100%;
    }
  }

  @keyframes animationDescriptionHover {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .card__service:hover .card__description__hover {
    animation: animationCompleteDescriptionHover 0.8s ease 1.1s forwards;
  }

  .card__service:not(:hover) .card__description__hover {
    animation: animationCompleteDescriptionNotHover 0.8s ease both;
  }

  @keyframes animationCompleteDescriptionHover {
    0% {
      scale: 0;
      opacity: 0;
      height: 0;
    }
    10% {
      height: fit-content;
    }
    100% {
      scale: 1;
      opacity: 1;
      height: fit-content;
    }
  }

  @keyframes animationCompleteDescriptionNotHover {
    0% {
      scale: 1;
      opacity: 1;
      height: fit-content;
    }
    10% {
      scale: 0.5;
      opacity: 0.5;
    }
    100% {
      scale: 0;
      opacity: 0;
      height: 0;
    }
  }
</style>
