---
type Props = {
  title1: string;
  offset?: string;
  className?: string;
};

const { title1, offset, className } = Astro.props;
---

<div
  class=`flex w-full justify-center items-center mb-20 relative titulo ${className}`
  data-aos="fade-up"
  data-aos-duration="2000"
  data-aos-once="true"
  data-aos-offset={offset ? offset : "0"}
>
  <h3 class="text-7xl">
    {title1}
  </h3>
</div>

<style>
  .titulo::after {
    content: "";
    position: absolute;
    aspect-ratio: 1/1;
    height: 100%;
    top: 13px;
    right: -8px;
    border-right: 2px solid #c2cda5;
    border-bottom: 2px solid #c2cda5;
    z-index: -1;
  }
  .titulo::before {
    content: "";
    position: absolute;
    aspect-ratio: 1/1;
    height: 100%;
    top: 6px;
    right: -15px;
    border-right: 2px solid #c2cda5;
    border-bottom: 2px solid #c2cda5;
    z-index: -1;
  }
</style>
