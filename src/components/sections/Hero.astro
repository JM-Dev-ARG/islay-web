  .text1-animation {
    transform: translate(-150%, 0);
    animation: textEnter 3s linear forwards;
  }

  .text2-animation {
    transform: translate(0, -100%);
    animation: textEnter2 3s linear 1s forwards;
  }

  @keyframes textEnter {
    0% {
      opacity: 0;
    }
    70% {
      opacity: 0;
    }
    90% {
      opacity: 1;
      transform: translate(-10%, 0);
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
    }
  }

  @keyframes textEnter2 {
    0% {
      opacity: 0;
    }
    70% {
      opacity: 0;
    }
    90% {
      transform: translate(0, -10%);
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
    }
  }

  @keyframes enterMobile {
    0% {
      left: 110%;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes enterMobile2 {
    0% {
      right: 110%;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes enterMobile3 {
    0% {
      top: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
