---
import Container from "../elements/Container.astro";
---

<Container className="h-svh relative grid place-items-center overflow-hidden">
  <div
    id="inicio"
    class="h-full w-full xl:w-[95%] 2xl:w-[90%] relative flex justify-center items-center md:items-start md:justify-between z-10"
  >
    <div
      class="w-full lg:w-2/3 h-full mt-32 sm:mt-20 lg:mt-0 lg:h-[90%] flex flex-col justify-start lg:justify-center items-center lg:items-start gap-1 lg:gap-4 text-pretty"
    >
      <span class="">
        <h1
          class="text-5xl md:text-6xl lg:text-7xl 2xl:text-[160px] font-light text-center lg:text-left text1-animation opacity-0"
        >
          Lorem ipsum
        </h1></span
      >

      <h2
        class="md:text-xl lg:text-2xl xl:text-3xl 2xl:text-4xl font-medium 2xl:tracking-wider word-space leading-10 2xl:leading-[45px] text-center lg:text-left text2-animation opacity-0 sm:mb-10"
      >
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Repudiandae
        modi
      </h2>
    </div>
  </div>
  <video
    muted
    autoplay
    class="w-full h-full absolute top-0 left-0 object-cover"
  >
    <source
      src="./video/videoHero.mp4"
      type="video/mp4"
    />
  </video>
  <div class="capa"></div>
</Container>

<style>
  .anton {
    font-family: "Anton", sans-serif;
  }

  .word-space {
    word-spacing: 6px;
  }

  .capa {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #131111;
    opacity: 0.4;
    mix-blend-mode: overlay;
  }

  @keyframes enter {
    0% {
      opacity: 0;
      top: 120%;
    }
    100% {
      opacity: 1;
      top: 85%;
      background: url("../../../public/img/trabajo-hero.avif");
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
    }
  }

  @keyframes enter2 {
    0% {
      opacity: 0;
      right: 135%;
    }
    100% {
      opacity: 1;
      right: 90%;
      background: url("../../../public/img/manos-hero.avif");
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
    }
  }

  .text1-animation {
    transform: translate(-150%, 0);
    animation: textEnter 3s linear 1.5s forwards;
  }

  .text2-animation {
    transform: translate(-150%, 0);
    animation: textEnter2 3s linear 2s forwards;
  }

  @keyframes textEnter {
    0% {
      opacity: 0;
    }
    90% {
      transform: translate(-10%, 0);
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
    }
  }

  @keyframes textEnter2 {
    0% {
      opacity: 0;
    }
    90% {
      transform: translate(-10%, 0);
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
    }
  }

  @keyframes enterMobile {
    0% {
      left: 110%;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes enterMobile2 {
    0% {
      right: 110%;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes enterMobile3 {
    0% {
      top: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
