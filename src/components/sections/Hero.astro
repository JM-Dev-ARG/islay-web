  .capa {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(
      180deg,
      rgba(158, 158, 147, 0) 80%,
      #3a3e32 100%
    );
    mask-image: overlay;
  }

